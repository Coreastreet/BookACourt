                           <div class="invalid-feedback row"><span class='col offset-4'>Please enter a valid phone number.</span></div>
                         </div>
                       </div>
                     </div>
                      <div class="form-row nested">
                         <div class="col-md-12">
                           <div class="row pr-2 mb-2">
                             <%= f.label :ABN, "ACN/ABN", class: 'min-label col-4 mb-0 align-self-center text-right' %>
                             <%= f.text_field :ABN, class: 'col-3 form-control mandatory white-box', required: true, maxlength: 14 %>
                             <div class="invalid-feedback row"><span class='col offset-4'>Please enter a valid ACN/ABN.</span></div>
                           </div>
                         </div>
                       </div>
                       <div class= "form-row d-none">
                         <p class="heading font-weight-normal mt-3">Industry type</p>
                       </div>
                      <div class = "form-row mb-4 mx-0 d-none align-items-baseline justify-content-between" id="hiddenCourtsNo">
                        <%= f.radio_button :numberOfCourts, 2 %>
                        <%= f.label :numberOfCourts, "Two Courts", value: 2 %>
                        <%= f.radio_button :numberOfCourts, 4 %>
                        <%= f.label :numberOfCourts, "Four Courts", value: 4 %>
                        <%= f.radio_button :numberOfCourts, 6 %>
                        <%= f.label :numberOfCourts, "Six Courts", value: 6 %>
                        <%= f.radio_button :numberOfCourts, 8 %>
                        <%= f.label :numberOfCourts, "Eight Courts", value: 8 %>
