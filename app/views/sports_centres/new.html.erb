<section class="container-fluid bg-white my-auto">
  <div class="container py-3">
    <%= form_with(model: @sports_centre, local: true, html: {novalidate: true, id: 'registerCentre',class: 'needs-validation business-registration', multipart: true }) do |f| %>
        <div class="row">
            <div class="mx-auto col-md-8">
              <fieldset class="card" id="first-card">
                <div class="card-header">
                  <h4 class="mb-0">Register your business</h4>
                </div>
                <div class="card-body">
                      <div class= "form-row">
                        <p class="bold heading">SPORTS CENTRE INFORMATION</p>
                      </div>
                      <%= f.fields_for(@new_address) do |new_address| %>
                      <div class="form-row nested">
                         <div class="col-md-12">
                              <div class="row pr-2 mb-2">
                                <%= new_address.label :full_address, "Company Name", class: 'min-label col-4 mb-0 align-self-center text-right' %>
                                <%= new_address.text_field :full_address, class: 'col-6 form-control mandatory white-box', placeholder: "Morris Iemma Sports Centre", id: "autocomplete", autocomplete: "on" %>
                                <div class="invalid-feedback row"><span class='col offset-4'>This field must be filled out.</span></div>
                              </div>
                          </div>
                      </div>
                       <div class="form-row nested">
                          <div class="col-md-12">
                               <div class="row pr-2 mb-2">
                                 <%= f.label :email, "Company Email", class: 'min-label col-4 mb-0 align-self-center text-right' %>
                                 <%= f.email_field :email, class: 'col-6 form-control mandatory white-box', required: true%>
                                 <div class="invalid-feedback row"><span class='col offset-4'>Please enter a valid email address.</span></div>
                               </div>
                           </div>
                       </div>
                       <div class="form-row nested">
                          <div class="col-md-12">
                               <div class="row pr-2 mb-2">
                                 <%= f.label :password, "Password", class: 'col-4 min-label mb-0 align-self-center text-right' %>
                                 <%= f.password_field :password, class: 'col-3 form-control mandatory white-box passwdTop', required: true%>
                                 <div class="row w-100"><span class="hint col offset-4">Min. 8 characters.</span></div>
                               </div>
                           </div>
                       </div>
                        <div class="form-row nested">
                           <div class="col-md-12">
                             <div class="row pr-2 mb-2">
                               <%= f.label :password_confirmation, "Password Confirmation", class: 'col-4 min-label mb-0 align-self-center text-right' %>
                               <%= f.password_field :password_confirmation, class: 'col-3 form-control mandatory white-box passwdConfirm', required: true%>
                               <div class="invalid-feedback row"><span class='col offset-4'>Passwords do not match</span></div>
                             </div>
                           </div>
                         </div>
                    </div>
                  <div class="card-footer">
                    <div class="form-row btn-toolbar p-0">
                        <button type="button" class="btn btn-primary previous"><i class="fa fa-angle-left mr-2"></i>Previous</button>
                        <button type="button" class="btn btn-primary ml-auto next">Next<i class="fa fa-angle-right ml-2"></i></button>
                    </div>
                  </div>
              </fieldset>
            </div>
        </div>
        <div class="row">
            <div class="mx-auto col-md-8">
              <fieldset class="card">
                <div class="card-header">
                  <h4 class="mb-0">General information</h4>
                </div>
                <div class="card-body">
                    <div class= "form-row">
                      <p class="heading font-weight-normal">Company address</p>
                    </div>
                    <div class="form-row nested">
                      <div class="col-md-12">
