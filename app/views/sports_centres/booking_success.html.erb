<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col-8">
      <% if @sports_centre.logo.attached? %>
        <%= image_tag((url_for @sports_centre.logo), class: "mx-auto d-block image-contain logo-height") %>
      <% else %>
        <%= image_tag((asset_path("no-logo-available.png")), class: "mx-auto d-block image-contain logo-height") %>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-3">
      <%= image_tag("email-sent-icon.png", class: "mx-auto d-block img-fluid") %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10 mt-5">
      <h2 class="text-center">Your booking with <%= @sports_centre.title %> was successful.</h2>
      <h4 class="text-center text-primary">A confirmation email will be sent shortly.<h4>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p class="text-right"><small class="text-muted">Icons made by <a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> from <a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></p>
    </div>
  </div>
</div>
